{
  "name": "gyfchong-portfolio",
  "description": "Geoffrey Chong's portfolio",
  "author": {
    "name": "Geoffrey Chong",
    "url": "http://geoffreychong.com"
  },
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gyfchong/portfolio"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.2.0",
  "scripts": {
    "start": "pnpm run clean && parcel src/*.html",
    "build": "pnpm run clean && parcel build src/*.html --no-source-maps && yarn run copyTxtToDist",
    "clean": "rm -rf dist",
    "copyTxtToDist": "cp src/robots.txt dist/",
    "report": "lighthouse http://localhost:1234 --output html --output-path ./report.html --view"
  },
  "dependencies": {
    "@parcel/core": "^2.8.3",
    "normalize.css": "^8.0.1",
    "reset.css": "^2.0.2"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "2.8.3",
    "@parcel/transformer-jsonld": "2.8.3",
    "autoprefixer": "^10.4.14",
    "parcel": "^2.8.3",
    "parcel-plugin-imagemin": "^4.0.2",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1"
  }
}
